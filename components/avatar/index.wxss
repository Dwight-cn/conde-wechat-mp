.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.avatar-img{
  width: 100%;
  height: 100%;
}
.default-avatar {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 50%;
  background: #fafafa;
  overflow: hidden;
}
.default-avatar::before,
.default-avatar::after {
  content: "";
  display: block;
  position: absolute;
  left: 50%;
  background: #eee;
}
.default-avatar::before {
  width: 40%;
  height: 0;
  padding-top: 40%;
  border-radius: 50%;
  top: 50%;
  margin-left: -20%;
  margin-top: -30%;
}
.default-avatar::after {
  width: 60%;
  height: 0;
  padding-top: 60%;
  border-radius: 20%;
  top: 50%;
  margin-left: -30%;
  margin-top: 15%;
}
