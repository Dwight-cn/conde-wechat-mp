<!-- index.wxml -->
<view class="home-container" bind:touchend="touchendHandle" bind:touchmove="touchmoveHandle">
    <!-- 话题标签 -->
    <view class="topic-tab {{topicTabFixed ? 'fixed' : ''}}">
        <view wx:for="{{topicText}}" wx:key="{{item}}" bind:tap="tabTap" data-index="{{index}}" class="topic-tab-item {{ currentTopic === index ? 'cur' : '' }}">{{item}}</view>
        <view class="topic-tab-border" style="left: {{ tabBorderOffser }}px"></view>
    </view>
    <!-- 话题列表 -->
    <swiper class="top-list-wrap" current="{{currentTopic}}" bindchange="swiperChangeHandle" bindtransition="swiperTransitionHandle" bindanimationfinish="animationfinishHandle">
        <swiper-item wx:for="{{topicContent}}" wx:key="{{index}}" wx:for-item="list" wx:for-index="idx" class="top-list-item">
            <scroll-view scroll-y="false"  enable-back-to-top="true" upper-threshold="-20" bindscrolltoupper="upper" bindscrolltolower="loadMore">
                <topic-item wx:for="{{list}}" wx:key="{{item.id}}" data="{{item}}"></topic-item>
                <!-- <view class="load-tips {{!topicLoading[idx]? 'hide': ''}}"  wx:if="{{!topicLoaded[idx]}}">加载中……</view> -->
                <loading class="{{!topicLoading[idx]? 'hide': ''}}"  wx:if="{{!topicLoaded[idx]}}"></loading>
                <view class="load-tips" wx:if="{{!topicLoading[idx] &&  topicLoaded[idx]}}">已经到底啦</view>
            </scroll-view>
        </swiper-item>
    </swiper>
</view>
